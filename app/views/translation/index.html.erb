<h2 class="text-center">Tradutor de palavras Campus Code</h2>
<div class="panel panel-primary">
  <div class="panel-heading"  style="padding-bottom:20px;">
    Lista de Traduções
    <%= link_to ('Novo').html_safe, new_translation_path, :class=>"btn btn-default pull-right" %>
  </div>
    <table class="table">
      <thead>
          <tr>
          <th>#</th>
          <th>Palavras</th>
          <th>Vizualizar Traducao</th>
          <th>Editar</th>
          <th>Deletar</th>
        </tr>
      </thead>
      <tbody>
    <% @traducao.each do |traducao| %>
        <tr>
          <td>
            <%= traducao.id %>
          </td>
          <td>
            <%= traducao.texto_ingles %>
          </td>
          <td>
            <%= link_to ('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>').html_safe, translation_path(traducao.id) %>
          </td>
          <td>
            <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, edit_translation_path(traducao.id) %>
          </td>
          <td>
            <%= link_to ('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>').html_safe, { action: :destroy, id: traducao.id }, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' }  %>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
</div>
